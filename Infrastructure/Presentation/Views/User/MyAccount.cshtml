<div class="container py-10">
    <div class="row">
        <!-- Sidebar Nav -->
        <div class="col-md-3 border-end">
            <div class="nav flex-column nav-pills"
                 id="account‐pills‐tab"
                 role="tablist"
                 aria-orientation="vertical">
                <a class="nav-link active"
                   id="account-info-tab"
                   data-bs-toggle="pill"
                   href="#account-info"
                   role="tab"
                   aria-controls="account-info"
                   aria-selected="true">Account Info</a>
                
               @if (User.IsInRole(Roles.Customer))
               {
                   <a 
	                   class="nav-link"
	                   id="my-orders-tab"
	                   data-bs-toggle="pill"
	                   href="#my-orders"
	                   role="tab"
	                   aria-controls="my-orders"
	                   aria-selected="false">My Orders</a>
               }

            </div>
        </div>

        <!-- Content Panes -->
        <div class="col-md-9">
            <div class="tab-content" id="account‐pills‐content">
                <!-- Account Info Pane -->
                <div class="tab-pane fade show active"
                     id="account-info"
                     role="tabpanel"
                     aria-labelledby="account-info-tab">
                    <h3>My Account</h3>
                    <hr />
                    <form asp-action="UpdateUserInfo">
                        <input hidden asp-for="Id" />
                        <input hidden asp-for="@Model.Address.Id" />
                        <input hidden asp-for="UserName" class="form-control bg-100">
                       
                        <div class="mb-3 row">
                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input asp-for="Email"  class="form-control bg-100"  >
                            </div>
                            <div class="col-sm-4 d-flex gap-2">
                                <button class="btn btn-outline-warning">Change Email</button>
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="@Model.Address.FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address.FirstName" class="form-control bg-100" >
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="@Model.Address.LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address.LastName" class="form-control bg-100">
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="@Model.Address.Street" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address.Street" class="form-control bg-100">
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label asp-for="@Model.Address.City" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address.City" class="form-control bg-100">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="@Model.Address.Country" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="@Model.Address.Country" class="form-control bg-100">
                            </div>
                        </div>

                        <!-- Subscriptions -->
                     @*    <div class="mb-3 row">
                            <div class="offset-sm-2 col-sm-10">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="newsletter">
                                    <label class="form-check-label" for="newsletter">Subscribe to our Newsletter</label>
                                </div>
                                <div class="form-check mt-2">
                                    <input type="checkbox" class="form-check-input" id="sms">
                                    <label class="form-check-label" for="sms">Subscribe to SMS</label>
                                </div>
                            </div>
                        </div> *@

                        <!-- Submit Button -->
                        <div class="mb-3 row">
                            <div class="offset-sm-2 col-sm-10">
                                <button type="submit" class="btn btn-warning rounded-pill px-4">Update</button>
                            </div>
                        </div>
                    </form>
                </div>

             

                <!-- My Orders Pane -->
                <partial name="_OrdersForUser"  />


             

            </div>
        </div>
    </div>
</div> 





















