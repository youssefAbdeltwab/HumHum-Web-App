@model ProductCategoryToReturnDto

@{
    ViewData["Title"] = "Delete";
}


<div class="d-flex justify-content-center mt-3 mb-4">
    <div class="text-center">
        <span class="badge py-2 px-3 bg-light-subtle">
            <h4 class="text-danger fw-bold mb-3">Are you sure you want to delete this?</h4>
            <span class="fs-3 text-warning">Delete @Model.Name</span>
        </span>
    </div>
</div>

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6 bg-dark text-black p-4 rounded shadow">
        <dl class="row mb-4">
            <dt class="col-sm-3 text-dark">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3 text-dark">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 text-dark">Image</dt>
            <dd class="col-sm-9">
                <img src="@Model.Image" class="w-100 rounded" style="max-height: 250px; object-fit: cover;" />
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <div class="d-flex justify-content-center gap-3">
                <input type="submit" value="Delete" class="btn btn-danger btn-sm px-4" />
                <a asp-action="Index" class="btn btn-warning btn-sm text-dark px-4" style="background-color: #ffc107;">Back to List</a>
            </div>
        </form>
    </div>
</div>



