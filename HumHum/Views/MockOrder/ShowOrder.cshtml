    ViewData["Title"] = "ShowOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowOrder</h1>

<div>
    <h4>OrderToReturnDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
