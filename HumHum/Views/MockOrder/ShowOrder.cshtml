                    @item.ProductImage
                </dd> 
                <dt class="col-sm-2">
                     Product Price :
                </dt>
                <dd class="col-sm-10">
                    @item.Price
                </dd>

                <dt class="col-sm-2">
                    Product Quantity :
                </dt>
                <dd class="col-sm-10">
