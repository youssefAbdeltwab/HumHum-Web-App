@model Shared.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["HideFooterAndFooter"] = true;
}
@* <img src="~/assets/img/gallery/bg/login.jpg" /> *@


<!-- FULL PAGE WRAPPER WITH BACKGROUND -->
<div style="background-image: url('/assets/img/gallery/bg/login.jpg'); background-size: cover; background-position: center; min-height: 93vh;">
    <div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 93vh;">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 m-3" style="background-color: white;">
                <div class="card-body p-4 m-4">
                    <h3 class="card-title text-center mb-4">Login to Your Account</h3>

                    <form asp-action="Login" class = "Login">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control bg-100" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control bg-100" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input bg-100" asp-for="RememberMe" />
                            <label class="form-check-label" for="RememberMe">
                                @Html.DisplayNameFor(model => model.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>

                        <div class="text-center mb-3">
                            <a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a>
                        </div>

                        <div class="text-center">
                            <p class="mb-2">Or sign in with:</p>
                            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Facebook"
                               class="btn me-2"
                               style="background-color: transparent !important; color: #0d6efd !important; border: 1px solid #0d6efd !important;">
                                <i class="fab fa-facebook-f me-1"></i> Facebook
                            </a>

                            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" asp-route-returnUrl="/"
                               class="btn"
                               style="background-color: transparent !important; color: #dc3545 !important; border: 1px solid #dc3545 !important;">
                                <i class="fab fa-google me-1"></i> Google
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>




