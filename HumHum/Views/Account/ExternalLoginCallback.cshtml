@model Shared.ViewModels.ExternalLoginConfirmationViewModel

@{
    ViewData["Title"] = "ExternalLoginCallback";
    ViewData["HideFooterAndFooter"] = true;

}


<h2>Confirm External Login</h2>

<form asp-action="ExternalLoginConfirmation" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control bg-100" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

